---
import Analytics from "@vercel/analytics/astro";
import "../styles/global.css";
import "@fontsource-variable/space-grotesk";
import ToasterWithTheme from "@/components/toaster-with-theme";
const {
  title,
  description = "Personal Dev Portfolio of Jaden Jansz",
  image = "/logo.png",
  url = "https://jadenjansz.vercel.app/",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Basic SEO Meta Tags -->
    <link rel="canonical" href={url} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="jadenjansz" />
    <meta name="theme-color" content="#01cdfe" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="jadenjansz" />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@jadenjansz" />
    <meta name="twitter:creator" content="@jadenjansz" />
    <meta name="twitter:url" content={url} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    <meta
      name="twitter:image:alt"
      content="Personal Dev Portfolio of Jaden Jansz"
    />

    <!-- Additional Social Media Tags -->
    <meta property="fb:app_id" content="" />
    <meta name="linkedin:owner" content="" />
    <Analytics />
  </head>
  <body class="container px-5 mx-auto font-space">
    <slot />
    <ToasterWithTheme client:load />
  </body>
</html>
